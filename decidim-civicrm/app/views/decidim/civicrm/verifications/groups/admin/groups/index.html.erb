<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
    </h2>
  </div>
  <div class="card-section">
    <% if groups.present? %>
      <table class="table-list civicrm-groups">
        <thead>
          <tr>
            <th><%= t(".group_title") %></th>
            <th><%= t(".name") %></th>
            <th><%= t(".description") %></th>
            <th><%= t(".visibility") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% groups.each do |group| %>
            <tr>
              <td><%= group[:title] %></td>
              <td><%= group[:name] %></td>
              <td><%= group[:description] %></td>
              <td><%= group[:visibility] %></td>
              <td><%= icon_link_to "reload", group_path(id: group[:id], name: group[:title]), t(".update"), method: :post %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="alert"><%= t(".error") %></p>
    <% end %>
  </div>
</div>
